<!DOCTYPE html>
<html>
<head>
  <title>Playlist</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- CURRENT USER -->
    <% if session[:user_id] %>
        <a class="btn btn-default pull-right" href="/users/logout">Log Out</a>
    <% end %>
<!-- FLASH MESSAGES -->
<% if flash %>
	<% flash.each do |type,msg| %>
		<% msg.each do |i| %>
		<h4><span class="label label-<%= type %>"><%= i %></span></h4>
		<% end %>
	<% end %>
<% end %>

<div class='container-fluid'>

<%= yield %>
</div>
</body>
</html>
